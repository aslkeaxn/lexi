generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  firebaseId String @unique
  username   String @unique

  projects     Project[]
  projectRoles RoleOnProject[]
}

model Project {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  userRoles  RoleOnProject[]
  languages  ProjectAndLanguage[]
  namespaces Namespace[]
}

enum ProjectRole {
  Owner
  Editor
  Viewer
}

model RoleOnProject {
  id   String      @id @default(auto()) @map("_id") @db.ObjectId
  role ProjectRole

  userId    String  @db.ObjectId
  user      User    @relation(fields: [userId], references: [id])
  projectId String  @db.ObjectId
  project   Project @relation(fields: [projectId], references: [id])

  @@unique([userId, projectId])
}

model Language {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  code String @unique

  projects ProjectAndLanguage[]
}

model ProjectAndLanguage {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  projectId  String   @db.ObjectId
  project    Project  @relation(fields: [projectId], references: [id])
  languageId String   @db.ObjectId
  language   Language @relation(fields: [languageId], references: [id])

  @@unique([projectId, languageId])
}

model Namespace {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  projectId String  @db.ObjectId
  project   Project @relation(fields: [projectId], references: [id])

  items Item[]

  @@unique([projectId, name])
}

enum ItemType {
  Group
  Text
}

model Item {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  key      String
  value    String?
  itemType ItemType

  namespaceId String    @db.ObjectId
  namespace   Namespace @relation(fields: [namespaceId], references: [id])
  parentId    String?   @db.ObjectId
  parent      Item?     @relation("GCT", fields: [parentId], references: [id], onUpdate: NoAction, onDelete: NoAction)

  children Item[] @relation("GCT")

  @@unique([parentId, key])
}
